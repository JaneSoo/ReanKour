<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#fff"/>
                <TextView
                    android:id="@+id/proTopName"
                    android:layout_margin="5dp"
                    android:textColor="#494949"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:text="Kor koemsreang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="25dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:text="0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:text="Inbox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"/>
                        <TextView
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="New"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"/>
                        <TextView
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="other"/>
                    </LinearLayout>

                </LinearLayout>

             <Button
                 android:layout_margin="10dp"
                 android:id="@+id/proEdit"
                 android:background="#86ddea"
                 android:textColor="#fff"
                 android:text="Edit Profile"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/man"/>
                <TextView
                    android:paddingLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:text="kor koemsreang"
                    android:id="@+id/proName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--<view-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0.5dp"/>-->
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/university"/>

                <TextView
                    android:id="@+id/proAddr"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:text="Adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <!--<view-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0.5dp"/>-->

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/openbook"/>
                <TextView
                    android:id="@+id/proSkill"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:text="Skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--<view-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0.5dp"/>-->
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/openbook"/>
                <TextView
                    android:id="@+id/proEdu"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:text="Education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--<view-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0.5dp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/openbook" />

                <TextView
                    android:id="@+id/proPosi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:text="Current Position"
                    android:textSize="20dp" />

            </LinearLayout>

            <!--<view-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0.5dp"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/openbook" />

                <TextView
                    android:id="@+id/proExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:text="Experience"
                    android:textSize="20dp" />

            </LinearLayout>




            <TextView
                android:paddingTop="10dp"
                android:textColor="#0e0e0e"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="PRIVATE INFORMATION"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--<view-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0.5dp"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mail"/>
                <TextView
                    android:id="@+id/proEmail"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:text="korkoemsreang@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <!--<view-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0.5dp"/>-->
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/smartphone"/>
                <TextView
                    android:id="@+id/proNum"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:text="+85586736302"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <!--<view-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0.5dp"/>-->

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/homosexual"/>
                <TextView
                    android:id="@+id/proSex"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:text="Female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <!--<view-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0.5dp"/>-->

        </LinearLayout>

    </LinearLayout>

</ScrollView>